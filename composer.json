{
    "name":"bear/package",
    "description":"BEAR.Sunday application package",
    "keywords":[
        "BEAR.Sunday",
        "framework",
        "DI",
        "AOP",
        "REST"
    ],
    "homepage":"https://github.com/koriym/BEAR.Package",
    "license":"BSD-3-Clause",
    "authors":[
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/koriym/BEAR.Package/graphs/contributors"
        }
    ],
    "require":{
        "php":">=5.4.0",
        "ext-curl":"*",
        "bear/resource":"0.7.*",
        "bear/sunday":"0.7.*",
        "aura/router":"1.0.*",
        "doctrine/annotations":"1.*",
        "doctrine/cache":"1.*",
        "doctrine/dbal":"2.3.*",
        "guzzle/guzzle":"3.3.*",
        "nocarrier/hal":"0.9.*",
        "pagerfanta/pagerfanta":"1.*@dev",
        "smarty/smarty":"3.1.*",
        "symfony/console":"2.0.*",
        "symfony/http-foundation":"2.0.*",
        "symfony/routing": "2.2.*",
        "twitter/bootstrap":"2.3.*",
        "zendframework/zend-log":"dev-master",
        "zendframework/zend-db": "2.1.*",
        "zendframework/zend-stdlib": "dev-master",
        "classpreloader/classpreloader": "1.*"
    },
    "require-dev":{
        "printo/printo":"dev-master",
        "facebook/xhprof":"dev-master",
        "firephp/firephp-core":"dev-master",
        "twig/twig":"1.*"
    },
    "autoload":{
        "psr-0":{
            "BEAR\\Package":"src/",
            "BEAR\\Ace":"src/",
            "Helloworld\\":"apps/",
            "Sandbox\\":"apps/"
        },
        "class-map": ["Installer.php", "."]
    },
    "minimum-stability":"beta",
    "scripts"   :{
        "post-install-cmd": ["php bin/setup.php", "php bin/env.php"],
        "post-autoload-dump": ["BEAR\\Package\\Installer::packageUpdate", "php bin/loader.php"]
    },
    "repositories":[
        {
            "type":"composer",
            "url":"http://packages.zendframework.com/"
        }
    ]
}
